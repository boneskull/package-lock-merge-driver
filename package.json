{
  "name": "package-lock-merge-driver",
  "version": "0.0.1",
  "type": "module",
  "description": "Git merge driver for package-lock.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/package-lock-merge-driver.git"
  },
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com"
  },
  "license": "ISC",
  "engines": {
    "node": "^20.11.0 || ^22.0.0 || ^24.0.0",
    "npm": ">=7"
  },
  "bin": {
    "package-lock-merge-driver": "dist/cli.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      }
    },
    "./cli.js": {
      "import": {
        "types": "./dist/cli.d.ts",
        "default": "./dist/cli.js"
      }
    }
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "package-lock-merge-driver.1",
    "src"
  ],
  "keywords": [
    "npm",
    "lockfiles",
    "package-lock.json",
    "npm-shrinkwrap.json",
    "shrinkwrap",
    "pkglock",
    "git",
    "merge",
    "driver",
    "conflict",
    "merge conflict",
    "resolve conflict",
    "automerge",
    "autoresolve"
  ],
  "scripts": {
    "build": "tsup",
    "build:docs": "tail -n +2 README.md | marked-man --manual 'User Commands' --version \"$npm_package_name@$npm_package_version\" > package-lock-merge-driver.1",
    "dev": "npm run build -- --watch",
    "lint": "eslint .",
    "lint:commit": "commitlint",
    "lint:fix": "eslint . --fix; npm pkg fix",
    "lint:staged": "lint-staged",
    "lint:types": "tsc -b ./.config/tsconfig.eslint.json",
    "lint:types:dev": "npm run lint:types -- --watch",
    "prepare": "husky; npm run build",
    "pretest": "npm run build",
    "test": "node --import tsx --test test/index.test.ts",
    "test:fixture:cleanup": "node script/cleanup-fixture.js",
    "test:fixture:setup": "node script/setup-fixture.js",
    "test:fixture:update": "node script/update-bundle.js test/fixture/repo-1.bundle test/fixture/repo-1",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "debug": "4.4.3",
    "slug": "11.0.1",
    "trash": "9.0.0",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@microsoft/api-extractor": "7.55.2",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/debug": "4.1.12",
    "@types/node": "24.10.3",
    "@types/slug": "5.0.9",
    "@types/yargs": "17.0.35",
    "eslint": "9.39.1",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "knip": "5.73.3",
    "lint-staged": "16.2.7",
    "marked-man": "2.1.0",
    "prettier": "3.7.4",
    "prettier-plugin-jsdoc": "1.8.0",
    "prettier-plugin-pkg": "0.21.2",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0"
  },
  "bundleDependencies": [
    "yargs",
    "slug",
    "trash"
  ],
  "knip": {
    "ignoreDependencies": [
      "@types/wallabyjs",
      "serve"
    ],
    "ignore": [
      ".wallaby.js",
      "**/*.cts",
      "**/*.d.ts"
    ],
    "tags": [
      "-knipignore"
    ],
    "node": {
      "entry": [
        "test/**/*.test.ts"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,cts,js,json,md,yml,json5}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "npm pkg fix"
    ]
  },
  "prettier": {
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg"
    ],
    "singleQuote": true,
    "tsdoc": true
  }
}
